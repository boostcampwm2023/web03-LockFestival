{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@src/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@utils/*": ["./src/utils/*"],
      "@enum/*": ["./src/enum/*"],
      "@constants/*": ["./src/constants/*"],
      "@modules/*": ["./src/modules/*"],
      "@auth/*": ["./src/modules/authModules/auth/*"],
      "@user/*": ["./src/modules/userModules/user/*"],
      "@group/*": ["./src/modules/userModules/group/*"],
      "@chat/*": ["./src/modules/userModules/chat/*"],
      "@brand/*": ["./src/modules/themeModules/brand/*"],
      "@branch/*": ["./src/modules/themeModules/branch/*"],
      "@crawlerUtils/*": ["./src/modules/themeModules/crawlerUtils/*"],
      "@theme/*": ["./src/modules/themeModules/theme/*"],
      "@diary/*": ["./src/modules/diaryModules/diary/*"],
      "@comment/*": ["./src/modules/diaryModules/comment/*"],
    }
  }
}
